<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".ScrollableActivity$DummySectionFragment">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_container">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_comunidad"
                style="?android:spinnerStyle"
                android:text="Andalucía"
                android:enabled="false"
                android:padding="15dp"
                android:layout_weight="1"

                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_group"
                style="?android:spinnerStyle"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="Elige grupo"/>
    </LinearLayout>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="8"
            android:id="@+id/editText1"
            android:layout_below="@+id/spinner_container"
            android:layout_alignLeft="@+id/spinner_container"
            android:hint="Primera matrícula"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="8"
            android:id="@+id/editText2"
            android:layout_below="@+id/editText1"
            android:layout_alignLeft="@+id/editText1"
            android:hint="Segunda matrícula"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="8"
            android:id="@+id/editText3"
            android:layout_below="@+id/editText2"
            android:layout_alignLeft="@+id/editText2"
            android:hint="Tercera matrícula"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="8"
            android:id="@+id/editText4"
            android:layout_below="@+id/editText3"
            android:layout_alignLeft="@+id/editText3"
            android:hint="Cuarta matrícula"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="créditos"
            android:layout_alignTop="@+id/editText1"
            android:paddingTop="5dp"
            android:layout_toRightOf="@+id/editText1"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="créditos"
            android:layout_alignTop="@+id/editText2"
            android:paddingTop="5dp"
            android:layout_toRightOf="@+id/editText2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="créditos"
            android:layout_alignTop="@+id/editText3"
            android:paddingTop="5dp"
            android:layout_toRightOf="@+id/editText3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="créditos"
            android:layout_alignTop="@+id/editText4"
            android:paddingTop="5dp"
            android:layout_toRightOf="@+id/editText4"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:id="@+id/button"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editText4"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>
